    <!--当天不同时段用户人数、用水量和消费金额-->
    <select id="getWaterAndMoneyDay" parameterType="java.util.HashMap" resultMap="BaseResultMap">
        SELECT
        DATE_FORMAT(ctime,'%H') name,
        count(*) total_price,
        sum(price)   price,
        sum(water_consumption) AS water_consumption
        FROM tb_user_purchase_record
        WHERE DATE_FORMAT(ctime, '%Y-%m-%d') = DATE_FORMAT(#{date}, '%Y-%m-%d')
        <if test="id!=null">
            AND user_id=#{id}
        </if>
        GROUP BY hour(ctime)
    </select>
    <!--当月不同时段用水量和消费金额-->
    <select id="getWaterAndMoneyMonth" parameterType="java.util.HashMap" resultMap="BaseResultMap">
        SELECT
        day(ctime) name,
        sum(price)   price,
        sum(water_consumption) AS water_consumption
        FROM tb_user_purchase_record
        WHERE DATE_FORMAT(ctime, '%Y-%m') = DATE_FORMAT(#{date}, '%Y-%m')
        <if test="id!=null">
            AND user_id=#{id}
        </if>
        GROUP BY day(ctime)
    </select>
    <!--通过时间和用户id查询消费记录-->
    <select id="selectByUserId" parameterType="java.util.HashMap" resultMap="BaseResultMap">
        SELECT * FROM tb_user_purchase_record WHERE 1=1
        <if test="userId!=null">
            AND user_id=#{userId}
        </if>
        <if test="value!=null">
            AND tb_user_purchase_record.name LIKE #{value}
        </if>
        <if test="date1!=null">
            AND ctime > #{date1}
        </if>
        <if test="date2!=null">
            AND #{date2}>ctime
        </if>
    </select>

</mapper>